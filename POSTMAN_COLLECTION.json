{
  "info": {
    "_postman_id": "willbank-api-collection",
    "name": "WillBank Microservices API",
    "description": "Collection complète pour tester l'API WillBank",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "clientId",
      "value": "1",
      "type": "string"
    },
    {
      "key": "accountId",
      "value": "1",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Client Management",
      "item": [
        {
          "name": "Create Client",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('clientId', jsonData.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Ahmed\",\n  \"lastName\": \"Alami\",\n  \"email\": \"ahmed.alami@willbank.ma\",\n  \"phone\": \"+212612345678\",\n  \"address\": \"123 Avenue Mohammed V, Rabat\",\n  \"cin\": \"AB123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/clients",
              "host": ["{{baseUrl}}"],
              "path": ["api", "clients"]
            }
          }
        },
        {
          "name": "Get Client by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/clients/{{clientId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "clients", "{{clientId}}"]
            }
          }
        },
        {
          "name": "Get All Clients",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/clients",
              "host": ["{{baseUrl}}"],
              "path": ["api", "clients"]
            }
          }
        },
        {
          "name": "Update Client",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Ahmed\",\n  \"lastName\": \"Alami\",\n  \"email\": \"ahmed.alami.updated@willbank.ma\",\n  \"phone\": \"+212612345679\",\n  \"address\": \"456 Boulevard Hassan II, Casablanca\",\n  \"cin\": \"AB123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/clients/{{clientId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "clients", "{{clientId}}"]
            }
          }
        },
        {
          "name": "Delete Client",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/api/clients/{{clientId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "clients", "{{clientId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "2. Account Management",
      "item": [
        {
          "name": "Create Savings Account",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('accountId', jsonData.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"clientId\": {{clientId}},\n  \"accountType\": \"SAVINGS\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/accounts",
              "host": ["{{baseUrl}}"],
              "path": ["api", "accounts"]
            }
          }
        },
        {
          "name": "Create Checking Account",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"clientId\": {{clientId}},\n  \"accountType\": \"CHECKING\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/accounts",
              "host": ["{{baseUrl}}"],
              "path": ["api", "accounts"]
            }
          }
        },
        {
          "name": "Get Account by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/accounts/{{accountId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "accounts", "{{accountId}}"]
            }
          }
        },
        {
          "name": "Get Accounts by Client ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/accounts/client/{{clientId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "accounts", "client", "{{clientId}}"]
            }
          }
        },
        {
          "name": "Get Account Balance (Cached)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/accounts/{{accountId}}/balance",
              "host": ["{{baseUrl}}"],
              "path": ["api", "accounts", "{{accountId}}", "balance"]
            }
          }
        },
        {
          "name": "Get All Accounts",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/accounts",
              "host": ["{{baseUrl}}"],
              "path": ["api", "accounts"]
            }
          }
        }
      ]
    },
    {
      "name": "3. Transaction Management",
      "item": [
        {
          "name": "Deposit Money",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"DEPOSIT\",\n  \"sourceAccountId\": {{accountId}},\n  \"amount\": 10000.00,\n  \"description\": \"Dépôt initial de salaire\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/transactions",
              "host": ["{{baseUrl}}"],
              "path": ["api", "transactions"]
            }
          }
        },
        {
          "name": "Withdraw Money",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"WITHDRAWAL\",\n  \"sourceAccountId\": {{accountId}},\n  \"amount\": 500.00,\n  \"description\": \"Retrait ATM\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/transactions",
              "host": ["{{baseUrl}}"],
              "path": ["api", "transactions"]
            }
          }
        },
        {
          "name": "Transfer Money",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"TRANSFER\",\n  \"sourceAccountId\": 1,\n  \"destinationAccountId\": 2,\n  \"amount\": 1500.00,\n  \"description\": \"Virement à un ami\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/transactions",
              "host": ["{{baseUrl}}"],
              "path": ["api", "transactions"]
            }
          }
        },
        {
          "name": "Get Transaction by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/transactions/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "transactions", "1"]
            }
          }
        },
        {
          "name": "Get Transactions by Account",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/transactions/account/{{accountId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "transactions", "account", "{{accountId}}"]
            }
          }
        },
        {
          "name": "Get All Transactions",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/transactions",
              "host": ["{{baseUrl}}"],
              "path": ["api", "transactions"]
            }
          }
        }
      ]
    },
    {
      "name": "4. Dashboard & Statements",
      "item": [
        {
          "name": "Get Client Dashboard",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/dashboard/{{clientId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "dashboard", "{{clientId}}"]
            }
          }
        },
        {
          "name": "Get Account Statement",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/statements/{{accountId}}?from=2025-01-01T00:00:00&to=2025-12-31T23:59:59",
              "host": ["{{baseUrl}}"],
              "path": ["api", "statements", "{{accountId}}"],
              "query": [
                {
                  "key": "from",
                  "value": "2025-01-01T00:00:00"
                },
                {
                  "key": "to",
                  "value": "2025-12-31T23:59:59"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "5. Notifications",
      "item": [
        {
          "name": "Get All Notifications",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/notifications",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notifications"]
            }
          }
        },
        {
          "name": "Get Notifications by Recipient",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/notifications/recipient/account-1@willbank.com",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notifications", "recipient", "account-1@willbank.com"]
            }
          }
        }
      ]
    },
    {
      "name": "6. Health Checks",
      "item": [
        {
          "name": "Eureka Server Health",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:8761/actuator/health",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8761",
              "path": ["actuator", "health"]
            }
          }
        },
        {
          "name": "API Gateway Health",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/actuator/health",
              "host": ["{{baseUrl}}"],
              "path": ["actuator", "health"]
            }
          }
        },
        {
          "name": "Client Service Health",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:8081/actuator/health",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8081",
              "path": ["actuator", "health"]
            }
          }
        }
      ]
    }
  ]
}
